{
  "name": "changkun-blog-desktop",
  "version": "0.2.0",
  "description": "Changkun's Blog Desktop Client",
  "main": "src/app.js",
  "scripts": {
    "start": "NODE_ENV=debug electron src/app.js",
    "build": "build -wml",
    "build-mac": "build --mac",
    "build-win": "build --win",
    "build-linux": "build --linux",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "us.changkun",
    "productName": "欧长坤的博客",
    "copyright": "Copyright © 2016-2017 changkun.us",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.entertainment"
    },
    "dmg": {
      "contents": [
        {
          "x": 415,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 135,
          "y": 170,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/changkun/changkun-blog-desktop.git"
  },
  "keywords": [
    "Changkun",
    "Blog",
    "DesktopClient"
  ],
  "author": {
    "maintainer": "Changkun Ou",
    "name": "changkun.us",
    "email": "hi@changkun.us",
    "url": "https://changkun.us"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/changkun/changkun-blog-clients/issues"
  },
  "homepage": "https://github.com/changkun/changkun-blog-clients/",
  "devDependencies": {
    "electron": "^1.6.2",
    "electron-builder": "^15.4.2",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1"
  }
}
